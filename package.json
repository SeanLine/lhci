{
  "name": "simple-react-app",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "react": "16.14.0",
    "react-dom": "16.14.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@lhci/cli": "^0.13.0",
    "@welldone-software/why-did-you-render": "^7",
    "babel-loader": "^8.0.0",
    "cross-env": "^7.0.3",
    "html-webpack-plugin": "^5.0.0",
    "puppeteer": "10.2.0",
    "webpack": "^5.0.0",
    "webpack-cli": "^4.0.0",
    "webpack-dev-server": "^4.0.0"
  },
  "scripts": {
    "start": "webpack serve --mode development --open",
    "build": "webpack --mode production",
    "prelhci:collect": "node -e \"require('fs').mkdirSync('.lhci/tmp',{recursive:true})\"",
    "lhci:collect": "cross-env TEMP=.\\.lhci\\tmp TMP=.\\.lhci\\tmp lhci collect --config=./lighthouserc.json",
    "lhci:assert": "lhci assert --config=./lighthouserc.json",
    "lhci": "pnpm build && pnpm lhci:collect && pnpm lhci:assert"
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "puppeteer"
    ]
  }
}