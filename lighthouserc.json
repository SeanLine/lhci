{
	"ci": {
		"collect": {
			"staticDistDir": "./dist",
			"numberOfRuns": 3,
			"puppeteerLaunchOptions": {
				"args": [
					"--no-sandbox",
					"--disable-setuid-sandbox"
				]
			}
		},
		"assert": {
			"assertions": {
				"categories:performance": [
					"error",
					{
						"minScore": 0.8
					}
				]
			}
		}
	}
}